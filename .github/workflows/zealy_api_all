name: Zealy API Fetch
on:
  workflow_dispatch:

jobs:
  fetch:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout
        uses: actions/checkout@v4

      - name: Set up Python
        uses: actions/setup-python@v4
        with:
          python-version: "3.10"

      - name: Install requests
        run: |
          python -m pip install --upgrade pip
          pip install requests

      - name: Run Zealy API fetch
        run: |
          python utils/scrapers/zealy_api_all.py || true

      - name: Upload artifacts
        uses: actions/upload-artifact@v4
        with:
          name: zealy-api
          path: |
            zealy_all_communities.json
            zealy_all_communities_compact.json
